    <attenuation>
		  <c>0.5</c>
		  <l>0.0002</l>
		  <q>0.000005</q>
    </attenuation>
    <exponent>80</exponent>
    <near-m>0.0</near-m>
    <far-m>1000</far-m>
    <cutoff>40</cutoff>
